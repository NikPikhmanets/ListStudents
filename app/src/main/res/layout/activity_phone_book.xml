<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_phone_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.studentslist.contact.PhoneBookActivity">

    <TextView
        android:id="@+id/list_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/list_contacts"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/lv_phone_book"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/list_contacts" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"

        app:srcCompat="@drawable/ic_person_add_white_24dp" />


</RelativeLayout>
